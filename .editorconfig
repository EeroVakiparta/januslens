# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Rust uses 4 spaces for indentation
[*.rs]
indent_size = 4

# Markdown files need trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# JSON files should have 2 spaces of indentation
[*.json]
indent_size = 2

# TOML files should have 2 spaces of indentation
[*.toml]
indent_size = 2

# Svelte files should have 2 spaces of indentation
[*.svelte]
indent_size = 2 